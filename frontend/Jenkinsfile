#!/bin/groovy
pipeline {
  agent {
    dockerfile {
		  filename "frontend/dockerfile-jenkins-agent"
		}
  }
  stages {
    stage("Install dependencies") {
      steps {
        dir("frontend") {
          sh "npm install"
        }
      }
    }
    stage("Unit test") {
      steps {
        dir("frontend") {
          sh  """npm run test \
              -v --junitxml=junit.xml \
              --cov-report xml --cov frontend/
          """
        }
	    }
    }
    stage("Build") {
      steps {
        dir("frontend") {
          sh "npm run build"
        }
      }
    }
  }
//  post {
//      always {
//        junit 'junit.xml'
//        cobertura coberturaReportFile: 'coverage.xml'
//      }
//  }
}
