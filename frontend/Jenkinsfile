pipeline {
  agent {
    dockerfile {
		  filename "frontend/dockerfile-jenkins-agent"
		}
  }
  stages {
    stage("Install dependencies") {
      steps {
        dir("frontend") {
          sh "npm install"
        }
      }
    }
    stage("Build") {
      steps {
        dir("frontend") {
          sh "npm run build"
        }
      }
    }
  }
}
